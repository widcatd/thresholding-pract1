# Custom button
<CustButton@Button>:

    text_size: self.size
    halign: 'center'
    valign: 'middle'

<Cust2@Button>:
    font_size: 32

<Cust3@Button>:
    font_size: 32

<Cust4@Button>:
    font_size: 32

<CalcGridLayout>:
    id: calculator
    display: entry
    rows: 5
    padding: 10
    spacing: 10

    BoxLayout:
        Image:
            id: h_i
        Image:
            id: h_t

    BoxLayout:
        Image:
            id: img
        Image:
            id: imgt
        Image:
            id: out

    BoxLayout:
        size_hint: 1, .3
        spacing: 10

        CustButton:
            text: "Aplicar Histogram \n Equalitation"

        CustButton:
            text: "Aplicar Thresholding"

        TextInput:
            id: entry
            font_size: 20
            multiline: False
            hint_text: "Rango"
        CustButton:
            text: "Aplicar contrast \n Stretching"
            on_release: root.reduced_image()

        CustButton:
            text: "Aplicar Op. Log"

        CustButton:
            text: "Aplicar Op. Exp."
    BoxLayout:
        CustButton:
            text: "Aplicar Op. Log"

        CustButton:
            text: "Aplicar Op. Exp."
        CustButton:
            text: "Aplicar Raise \n to power"