# Custom button
<CustButton@Button>:

    text_size: self.size
    halign: 'center'
    valign: 'middle'

<Cust2@Button>:
    font_size: 32

<Cust3@Button>:
    font_size: 32

<Cust4@Button>:
    font_size: 32

<CalcGridLayout>:
    id: calculator
    display: entry
    rows: 5
    padding: 10
    spacing: 10

    BoxLayout:
        Image:
            id: img
            
        Image:
            id: img2

    BoxLayout:
        Image:
            id: imgt
        Image:
            id: out

    BoxLayout:
        size_hint: 1, .3
        spacing: 10

        CustButton:
            text: "Aplicar Histogram \n Equalitation"

        CustButton:
            text: "Aplicar Thresholding"

        BoxLayout:
            size_hint: 2, 1
            canvas:
                Color:
                    rgba: 0.2,0.2,0.2,1
                Line:
                    rectangle: self.x, self.y, self.width+1, self.height+1

            TextInput:
                id: entry
                font_size: 20
                multiline: False
                hint_text: "Rango"
            CustButton:
                text: "Aplicar contrast \n Stretching"
                on_release: root.reduced_image()
            

        BoxLayout:
            size_hint: 2, 1
            canvas:
                Color:
                    rgba: 0.2,0.2,0.2,1
                Line:
                    rectangle: self.x, self.y, self.width+1, self.height+1

            TextInput:
                id: entry2
                font_size: 20
                multiline: False
                hint_text: "Valor C"
            CustButton:
                text: "Aplicar Op. Log"

        
    BoxLayout:
        size_hint: 1, .3
        spacing: 10


        BoxLayout:
            size_hint: 3, 1
            canvas:
                Color:
                    rgba: 0.2,0.2,0.2,1
                Line:
                    rectangle: self.x, self.y, self.width+1, self.height+1
            
            TextInput:
                id: entry3
                font_size: 20
                multiline: False
                hint_text: "Valor B"
            TextInput:
                id: entry4
                font_size: 20
                multiline: False
                hint_text: "Valor C"
            CustButton:
                text: "Aplicar Op. Exp."

        BoxLayout:
            size_hint: 3, 1
            canvas:
                Color:
                    rgba: 0.2,0.2,0.2,1
                Line:
                    rectangle: self.x, self.y, self.width+1, self.height+1
            CustButton:
                text: "Aplicar Raise \n to power"
            TextInput:
                id: entry5
                font_size: 20
                multiline: False
                hint_text: "Valor C"
            TextInput:
                id: entry6
                font_size: 20
                multiline: False
                hint_text: "Valor R"

        

    BoxLayout:
        size_hint: 1, .3
        spacing: 10

        CustButton:
            text: "Aplicar Op. Suma"

        CustButton:
            text: "Aplicar Op. Resta"
        
        BoxLayout:
            size_hint: 2, 1
            canvas:
                Color:
                    rgba: 0.2,0.2,0.2,1
                Line:
                    rectangle: self.x, self.y, self.width+1, self.height+1

            CustButton:
                text: "Aplicar Op. Multiplicacion"
            TextInput:
                id: entry7
                font_size: 20
                multiline: False
                hint_text: "Valor C"

        CustButton:
            text: "Aplicar Blending \n 2 imagenes"

        CustButton:
            text: "Aplicar Division \n 2 imagenes"
            