# Custom button
<CustButton@Button>:
    text_size: self.size
    halign: 'center'
    valign: 'middle'

<Cust2@Button>:
    font_size: 32

<Cust3@Button>:
    font_size: 32

<Cust4@Button>:
    font_size: 32

<CalcGridLayout>:
    id: calculator
    display: entry
    rows: 8
    padding: 10
    spacing: 10

    BoxLayout:
        size_hint: 1, .3
        spacing: 10

        CustButton:
            text: "Cargar en slot1"
            on_press: root.load1()
        Label:
            id: status
        CustButton:
            text: "Cargar en slot2"
            on_press: root.load2()

    BoxLayout:
        Image:
            id: img
            
        Image:
            id: img2

    BoxLayout:
        Image:
            id: imgt
        Image:
            id: out

    BoxLayout:
        size_hint: 1, .3
        spacing: 10

        CustButton:
            text: "Guardar"
            on_press: 

        CustButton:
            text: "Cargar"
            on_press: 

    BoxLayout:
        size_hint: 1, .3
        spacing: 10

        CustButton:
            text: "Aplicar Histogram \n Equalitation"
            on_press: root.f1()

        CustButton:
            text: "Aplicar Thresholding"
            on_press: root.f3()

        BoxLayout:
            size_hint: 2, 1
            canvas:
                Color:
                    rgba: 0.2,0.2,0.2,1
                Line:
                    rectangle: self.x, self.y, self.width+1, self.height+1

            TextInput:
                id: entry
                font_size: 20
                multiline: False
                hint_text: "Rango"
            CustButton:
                text: "Aplicar contrast \n Stretching"
                on_press: root.f2()
            

        BoxLayout:
            size_hint: 2, 1
            canvas:
                Color:
                    rgba: 0.2,0.2,0.2,1
                Line:
                    rectangle: self.x, self.y, self.width+1, self.height+1

            TextInput:
                id: entry2
                font_size: 20
                multiline: False
                hint_text: "Valor C"
            CustButton:
                text: "Aplicar Op. Log"
                on_press: root.f4()

        
    BoxLayout:
        size_hint: 1, .3
        spacing: 10


        BoxLayout:
            size_hint: 3, 1
            canvas:
                Color:
                    rgba: 0.2,0.2,0.2,1
                Line:
                    rectangle: self.x, self.y, self.width+1, self.height+1
            
            TextInput:
                id: entry3
                font_size: 20
                multiline: False
                hint_text: "Valor B"
            TextInput:
                id: entry4
                font_size: 20
                multiline: False
                hint_text: "Valor C"
            CustButton:
                text: "Aplicar Op. Exp."
                on_press: root.f5()

        BoxLayout:
            size_hint: 3, 1
            canvas:
                Color:
                    rgba: 0.2,0.2,0.2,1
                Line:
                    rectangle: self.x, self.y, self.width+1, self.height+1
            
            TextInput:
                id: entry5
                font_size: 20
                multiline: False
                hint_text: "Valor C"
            TextInput:
                id: entry6
                font_size: 20
                multiline: False
                hint_text: "Valor R"
            CustButton:
                text: "Aplicar Raise \n to power"
                on_press: root.f6()

        

    BoxLayout:
        size_hint: 1, .3
        spacing: 10

        CustButton:
            text: "Aplicar Op. Suma"
            on_press: root.f7()

        CustButton:
            text: "Aplicar Op. Div."
            on_press: root.f8()
        
        BoxLayout:
            size_hint: 2, 1
            canvas:
                Color:
                    rgba: 0.2,0.2,0.2,1
                Line:
                    rectangle: self.x, self.y, self.width+1, self.height+1

            
            TextInput:
                id: entry7
                font_size: 20
                multiline: False
                hint_text: "Valor C"
            CustButton:
                text: "Aplicar Op. Multiplicacion"

        CustButton:
            text: "Aplicar Blending \n2 imagenes"

        CustButton:
            text: "Aplicar Division \n2 imagenes"

    BoxLayout:
        size_hint: 1, .3
        spacing: 10

        CustButton:
            text: "Aplicar Op. AND \n2 imagenes"

        CustButton:
            text: "Aplicar Op. OR \n2 imagenes"
        
        CustButton:
            text: "Aplicar Op. XOR \n2 imagenes"

        CustButton:
            text: "Aplicar Op. NAND \n2 imagenes"

        CustButton:
            text: "Aplicar Op. NOR \n2 imagenes"
            